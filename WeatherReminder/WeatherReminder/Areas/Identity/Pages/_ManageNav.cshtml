@using WeatherReminder.Models.WeatherReminderModel
@inject SignInManager<WeatherReminderUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}
<ul class="nav nav-pills flex-column">
    <li class="nav-item"><a class="nav-link @ManageNavPages.IndexNavClass(ViewContext)" id="profile" asp-page="/Profile/Home/Index">Profile</a></li>
    <li class="nav-item"><a class="nav-link @ManageNavPages.PhoneNavClass(ViewContext)" id="phone" asp-page="/Profile/Phone/UpdatePhoneInProfile">Phone</a></li>
    <li class="nav-item"><a class="nav-link @ManageNavPages.EmailNavClass(ViewContext)" id="email" asp-page="/Profile/EmailUser/Email">Email</a></li>
    <li class="nav-item"><a class="nav-link @ManageNavPages.ChangePasswordNavClass(ViewContext)" id="change-password" asp-page="/Profile/Password/ChangePassword">Password</a></li>
    @if (hasExternalLogins)
    {
            <li id="external-logins" class="nav-item"><a id="external-login" class="nav-link @ManageNavPages.ExternalLoginsNavClass(ViewContext)" asp-page="./ExternalLogins">External logins</a></li>
    }
    <li class="nav-item"><a class="nav-link @ManageNavPages.PersonalDataNavClass(ViewContext)" id="personal-data" asp-page="/Profile/Account/PersonalData">Delete Account</a></li>
</ul>
